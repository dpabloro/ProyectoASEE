<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        android:textAppearance="?android:attr/textAppearanceLarge"></TextView>


    <TextView
        android:id="@+id/StatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="38dp"
        android:drawableLeft="@drawable/ic_status"
        android:drawableTint="@android:color/background_dark"
        android:drawablePadding="5dp"
        android:text="Status: "></TextView>

    <TextView
        android:id="@+id/statusView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/StatusLabel"
        android:layout_toEndOf="@+id/StatusLabel"></TextView>

    <TextView
        android:id="@+id/DateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="-19dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic_calendar"
        android:drawableTint="@android:color/background_dark"
        android:drawablePadding="5dp"
        android:text="Date: ">

    </TextView>

    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/DateLabel"
        android:layout_toEndOf="@+id/DateLabel" >
    </TextView>

</RelativeLayout>