<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="username"
        android:icon="@drawable/ic_perfil"
        android:key="pref_username"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLength="8"
        android:title="@string/username" />

    <EditTextPreference
        android:defaultValue="529"
        android:icon="@drawable/ic_numberaliments"
        android:key="pref_aliment"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/numAlimentos" />

    <EditTextPreference
        android:defaultValue="Default"
        android:icon="@drawable/ic_theme"
        android:summary="The theme selected is Default"
        android:key="pref_color"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:focusable="false"
        android:title="Theme selected" />


    <Preference
        android:key="tema1"
        android:icon="@drawable/ic_themeblue"
        android:title="Theme1 Blue"></Preference>

    <Preference
        android:key="tema2"
        android:icon="@drawable/ic_themebrown"
        android:title="Theme2 Brown"></Preference>

    <Preference
        android:key="tema3"
        android:icon="@drawable/ic_themepurple"
        android:title="Theme3 Purple"></Preference>




</PreferenceScreen>